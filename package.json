{
  "name": "campus-scheduler",
  "version": "2.0.0",
  "productName": "Campus Room Scheduler",
  "description": "Campus room scheduling and booking application for tablets and desktops",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron-reload && electron .",
    "build": "electron-builder",
    "package-mac": "electron-builder --mac",
    "package-win": "electron-builder --win",
    "package-linux": "electron-builder --linux",
    "test": "jest",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{js,json,md}\""
  },
  "build": {
    "appId": "com.campus.scheduler",
    "productName": "Campus Room Scheduler",
    "directories": {
      "output": "release-builds"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icons/mac/icon.icns",
      "target": ["dmg", "zip"]
    },
    "win": {
      "icon": "assets/icons/win/icon.ico",
      "target": ["nsis", "portable"]
    },
    "linux": {
      "icon": "assets/icons/png/1024x1024.png",
      "target": ["AppImage", "deb"],
      "category": "Office"
    }
  },
  "devDependencies": {
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "electron-reload": "^2.0.0-alpha.1",
    "eslint": "^9.16.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2"
  },
  "dependencies": {
    "@fullcalendar/core": "^6.1.15",
    "@fullcalendar/daygrid": "^6.1.15",
    "@fullcalendar/interaction": "^6.1.15",
    "@fullcalendar/timegrid": "^6.1.15",
    "@fullcalendar/list": "^6.1.15",
    "better-sqlite3": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "nodemailer": "^6.9.11",
    "ical-generator": "^7.0.0",
    "electron-store": "^11.0.2",
    "lodash": "^4.17.21"
  },
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
